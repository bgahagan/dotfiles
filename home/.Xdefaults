URxvt*scrollBar:                       false

!URxvt*font: xft:terminus:pixelsize=12
URxvt*font: xft:Monospace:pixelsize=12
URxvt*boldFont: xft:Monospace:pixelsize=12

## change default colors
URxvt*background: #000000
URxvt*foreground: #ffffff
URxvt*color0: #000000
URxvt*color1: #A80000
URxvt*color2: #00A800
URxvt*color3: #A85400
URxvt*color4: #0000A8
URxvt*color5: #A800A8
URxvt*color6: #00A8A8
URxvt*color7: #A8A8A8
URxvt*color8: #545054
URxvt*color9: #F85450
URxvt*color10: #50FC50
URxvt*color11: #F2FC50
URxvt*color12: #5054F8
URxvt*color13: #F854F8
URxvt*color14: #50FCF8
URxvt*color15: #F8FCF8 

URxvt.iconFile: /usr/share/pixmaps/gnome-term.xpm


# Allow tmux to set selection
URxvt*disallowedWindowOps: 20,21,SetXprop

XTerm*allowTcapOps: true ! Apparently this lets vim ask xterm its capabilities directly instead of using $TERM
XTerm*allowWindowOps: true ! Allows tmux to copy text to the clipboard
XTerm*disallowedWindowOps: 20,21,SetXprop ! prevents a security hole?
XTerm*renderFont: true ! Use truetype fonts
XTerm*faceName: mono ! Use this truetype font. Without this line, there's not default, so it falls back to bitmapped fonts.
XTerm*faceSize: 10.0 ! Use a sane size.
XTerm*maximized: true
XTerm*termName: xterm-256color ! Why is this not the default??? :-P
XTerm*utf8Title: true
#XTerm*visualBell: true
XTerm*selectToClipboard: true
